						android:layout_centerVertical="true"
						android:layout_marginLeft="95dp"
						android:layout_marginStart="95dp"
						android:layout_toRightOf="@id/tv_constellation"
						android:text="@string/constellation"
						android:textSize="14sp"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
						android:background="@color/divider_color"
						android:contentDescription="@null"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="?android:selectableItemBackground"
					android:clickable="true"
					android:descendantFocusability="blocksDescendants">

					<TextView
						android:id="@+id/tv_heigh"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"
						android:text="@string/tall"
						android:textColor="@color/gray_text"
						android:textSize="16sp"/>

					<TextView
						android:id="@+id/heigh"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="95dp"
						android:layout_marginStart="95dp"
						android:layout_toRightOf="@id/tv_heigh"
						android:text="@string/tall"
						android:textSize="14sp"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
						android:background="@color/divider_color"
						android:contentDescription="@null"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="?android:selectableItemBackground"
					android:clickable="true"
					android:descendantFocusability="blocksDescendants">

					<TextView
						android:id="@+id/tv_weight"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"
						android:text="@string/weight"
						android:textColor="@color/gray_text"
						android:textSize="16sp"/>

					<TextView
						android:id="@+id/weight"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="95dp"
						android:layout_marginStart="95dp"
						android:layout_toRightOf="@id/tv_weight"
						android:text="@string/weight"
						android:textSize="14sp"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
