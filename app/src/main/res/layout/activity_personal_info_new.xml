					<TextView
						android:id="@+id/tv_emotion"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"
						android:text="@string/married_state"
						android:textColor="@color/gray_text"
						android:textSize="16sp"/>

					<TextView
						android:id="@+id/emotion"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="65dp"
						android:layout_marginStart="65dp"
						android:layout_toRightOf="@id/tv_emotion"
						android:text="@string/married_state"
						android:textSize="14sp"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
						android:background="@color/divider_color"
						android:contentDescription="@null"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="?android:selectableItemBackground"
					android:clickable="true"
					android:descendantFocusability="blocksDescendants">

					<TextView
						android:id="@+id/tv_colleage"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"
						android:text="@string/college"
						android:textColor="@color/gray_text"
						android:textSize="16sp"/>

					<TextView
						android:id="@+id/colleage"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="65dp"
						android:layout_marginStart="65dp"
						android:layout_toRightOf="@id/tv_colleage"
						android:text="@string/identify"
						android:textSize="14sp"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
						android:background="@color/divider_color"
						android:contentDescription="@null"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="?android:selectableItemBackground"
					android:clickable="true"
					android:descendantFocusability="blocksDescendants">

					<TextView
						android:id="@+id/tv_signature"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"
						android:text="@string/personal_signature"
						android:textColor="@color/gray_text"
						android:textSize="16sp"/>

					<TextView
						android:id="@+id/signature"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="65dp"
						android:layout_marginStart="65dp"
						android:layout_toRightOf="@id/tv_signature"
						android:text="@string/personal_signature"
						android:textSize="14sp"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
						android:background="@color/divider_color"
						android:contentDescription="@null"/>
				</RelativeLayout>

			</LinearLayout>

			<TextView
				android:id="@+id/tv_friend"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:paddingBottom="8dp"
				android:paddingLeft="20dp"
				android:paddingTop="8dp"
				android:text="交友资料"/>

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/divider_height"
				android:layout_alignParentBottom="true"
				android:layout_marginLeft="@dimen/divider_margin_left"
				android:background="@color/divider_color"
				android:contentDescription="@null"/>

			<LinearLayout
				android:id="@+id/lay_friend"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
