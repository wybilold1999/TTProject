						android:text="首次见面希望"
						android:textColor="@color/gray_text"
						android:textSize="16sp"/>

					<TextView
						android:id="@+id/do_what_first"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="150dp"
						android:text="首次见面希望"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
						android:background="@color/divider_color"
						android:contentDescription="@null"/>
				</RelativeLayout>

			</LinearLayout>


			<TextView
				android:id="@+id/tv_social"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:paddingBottom="8dp"
				android:paddingLeft="20dp"
				android:paddingTop="8dp"
				android:text="@string/social_id"/>

			<LinearLayout
				android:id="@+id/social_lay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#fff"
				android:orientation="vertical">

				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/divider_height"
					android:layout_alignParentBottom="true"
					android:layout_marginLeft="@dimen/divider_margin_left"
					android:background="@color/divider_color"
					android:contentDescription="@null"/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="?android:selectableItemBackground"
					android:clickable="true"
					android:descendantFocusability="blocksDescendants">

					<TextView
						android:id="@+id/tv_wechat"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"
						android:text="@string/weixin"
						android:textColor="@color/gray_text"
						android:textSize="16sp"/>

					<TextView
						android:id="@+id/wechat_id"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_centerVertical="true"
						android:layout_marginLeft="100dp"
						android:layout_marginStart="100dp"
						android:layout_toRightOf="@id/tv_wechat"
						android:textSize="14sp"/>

					<Button
						android:id="@+id/check_view_wechat"
						android:layout_width="40dp"
						android:layout_height="25dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:layout_marginRight="20dp"
						android:background="@drawable/button_radius_background"
						android:text="查看"
						android:textColor="@android:color/white"
						android:textSize="12sp"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
						android:background="@color/divider_color"
						android:contentDescription="@null"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="?android:selectableItemBackground"
					android:clickable="true"
					android:descendantFocusability="blocksDescendants">

					<TextView
						android:id="@+id/tv_qq"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"
						android:text="@string/qq"
						android:textColor="@color/gray_text"
						android:textSize="16sp"/>

					<TextView
						android:id="@+id/qq_id"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_centerVertical="true"
						android:layout_marginLeft="110dp"
						android:layout_marginStart="110dp"
						android:layout_toRightOf="@id/tv_qq"
						android:textSize="14sp"/>

					<Button
						android:id="@+id/check_view_qq"
						android:layout_width="40dp"
						android:layout_height="25dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:layout_marginRight="20dp"
						android:background="@drawable/button_radius_background"
						android:text="查看"
						android:textColor="@android:color/white"
						android:textSize="12sp"/>

					<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/divider_height"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="@dimen/divider_margin_left"
						android:background="@color/divider_color"
						android:contentDescription="@null"/>
				</RelativeLayout>

			</LinearLayout>

			<TextView
				android:id="@+id/my_location"
