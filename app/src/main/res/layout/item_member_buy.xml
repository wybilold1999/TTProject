<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">

	<FrameLayout
		android:id="@+id/date_lay"
		android:layout_width="50dp"
		android:layout_height="50dp">

		<TextView
			android:id="@+id/date"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:textSize="20sp"
			android:textColor="@android:color/white"
			android:background="@drawable/button_radius_background"
			android:gravity="center_vertical|center_horizontal"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"/>

		<ImageView
			android:id="@+id/iv_hot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|right"
			android:src="@mipmap/icon_hot"
			android:visibility="gone"/>

	</FrameLayout>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="30dp"
		android:layout_toRightOf="@id/date_lay"
		android:orientation="vertical">


		<TextView
			android:id="@+id/limit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/preferential"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2dp"
			android:layout_toRightOf="@id/limit"/>

		<TextView
			android:id="@+id/description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/limit"
			android:layout_marginTop="10dp"/>
	</RelativeLayout>

	<Button
		android:id="@+id/buy"
		android:layout_width="60dp"
		android:layout_height="30dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:background="@drawable/button_radius_background"
		android:textColor="@android:color/white"
		android:textSize="12sp"/>


</RelativeLayout>